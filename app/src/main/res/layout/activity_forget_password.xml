<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forget_password"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:text="         welcome!\nplease Change your \n     password here! "
            android:textColor="#f2a02b"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="79dp"
            android:layout_height="72dp"
            android:src="@drawable/baseline_https_24"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="15dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginTop="30dp"
        android:padding="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email adresse"
            android:textSize="25sp"
            android:padding="10sp"
            />

        <EditText
            android:id="@+id/forget"
            android:layout_width="328dp"
            android:layout_height="60dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="exemple@gmail.com"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColorHint="#464646" />

        <Button
            android:id="@+id/button5"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backround_btn"
            android:text="Reset Password"
            android:textColor="#f2a02b"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/button4"
            style="@android:style/Widget.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backround_btn"
            android:text="BACK"
            android:textColor="#f2a02b"
            android:textSize="24sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_west_24"
            />
    </LinearLayout>


    </LinearLayout>

</ScrollView>