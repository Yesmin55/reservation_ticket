<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ticket_electrique"
    android:id="@+id/drawar_layout_ticket"
    >


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:theme="@style/navigationView"
        app:headerLayout="@layout/header"
        app:itemIconSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_menu"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/menu_ticket"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/header24"
        android:layout_margin="15dp"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="              Hi,please \n  choose one of 3 choices \n          to book a ticket"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#f2a02b"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/ticket"
            android:layout_marginTop="20dp"
            />

        
        <RadioGroup
            android:id="@+id/rgticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >


            <RadioButton
                android:id="@+id/rbchoixA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choix A"

                android:textSize="30sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbchoixB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choix B"

                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <RadioButton
                android:id="@+id/rbchoixC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choix C"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <!--     choix a et b et c houma les fenetre lei nel9awhom par exemle f poste bech na9dhiw menhom    -->






        </RadioGroup>

        <Button
            android:id="@+id/btngetTicket"
            style="@android:style/Widget.Button"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backround_btn"
            android:text="GET TICKET "
            android:textColor="#f2a02b"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>